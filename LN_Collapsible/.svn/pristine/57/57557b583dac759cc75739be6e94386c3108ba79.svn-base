//          version in your theme's directory, 
//          for example alta/widgets/_oj.alta.dvt.base.scss
// !!!

@import "../../utilities/oj.utilities";

@if $includeDvtBaseClasses != false {
  @include module-include-once("common.dvtbase") {
    .oj-dvtbase {
      display:block;
      position:relative;
      -webkit-touch-callout: none;
      -webkit-tap-highlight-color: rgba(0,0,0,0);
      font-family: $fontFamily;
      @include oj-animation-duration-property ($dvtAnimationDuration);
    }
    
    .oj-dvt-category1 {
      color: $dvtCategory1Color;
    }
    
    .oj-dvt-category2 {
      color: $dvtCategory2Color;
    }
    
    .oj-dvt-category3 {
      color: $dvtCategory3Color;
    }
    
    .oj-dvt-category4 {
      color: $dvtCategory4Color;
    }
    
    .oj-dvt-category5 {
      color: $dvtCategory5Color;
    }
    
    .oj-dvt-category6 {
      color: $dvtCategory6Color;
    }
    
    .oj-dvt-category7 {
      color: $dvtCategory7Color;
    }
    
    .oj-dvt-category8 {
      color: $dvtCategory8Color;
    }
    
    .oj-dvt-category9 {
      color: $dvtCategory9Color;
    }
    
    .oj-dvt-category10 {
      color: $dvtCategory10Color;
    }
    
    .oj-dvt-category11 {
      color: $dvtCategory11Color;
    }
    
    .oj-dvt-category12 {
      color: $dvtCategory12Color;
    }

    .oj-dvt-tooltip {
      background-color: $dvtTooltipBgColor;
      color: $textColor;
      border-style: solid;
      border-color: $dvtBorderColor;
      border-width: 1px;
      padding: 2px;
      font-size: $fontSize;
      font-family: $fontFamily;
    }

    .oj-dvt-datatip {
      background-color: $dvtTooltipBgColor;
      color: $textColor;
      border-style: solid;
      border-color: $dvtBorderColor;
      @include oj-border-radius($smallBorderRadius);
      border-width: 2px;
      padding: 2px;
      font-size: $fontSize;
      font-family: $fontFamily;
    }
    
    .oj-legend {
      font-size: $fontSize;
      color: $textColor;
    }

    .oj-legend-title {
      font-size: $fontSize;
      color: $textColor;
    }

    .oj-legend-section-title {
      font-size: $fontSize;
      color: $textColor;
    }
  }
}